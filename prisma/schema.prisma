// Prisma schema for DrugValue

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  createdAt   DateTime     @default(now())
  valuations  Valuation[]
}

model Drug {
  id          Int          @id @default(autoincrement())
  name        String
  indication  String
  phase       String
  mechanism   String?
  createdAt   DateTime     @default(now())
  valuations  Valuation[]

  @@index([name])
  @@index([indication])
}

model Valuation {
  id            Int       @id @default(autoincrement())
  userId        Int?
  drugId        Int?
  inputs        Json
  outputs       Json
  mechanismNote String?   // optional free-text notes
  shareSlug     String    @unique
  createdAt     DateTime  @default(now())

  user   User?  @relation(fields: [userId], references: [id])
  drug   Drug?  @relation(fields: [drugId], references: [id])

  @@index([createdAt])
  @@index([drugId])
  @@index([userId])
}
